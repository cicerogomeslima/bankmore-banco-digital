{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "cc_internal": {
        "Order": -1,
        "ClusterId": "contaCluster",
        "Match": { "Path": "/internal/cc/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/internal/cc" },
          { "PathPrefix": "/internal" }
        ]
      },

      "cc_swagger": {
        "Order": 0,
        "ClusterId": "contaCluster",
        "Match": { "Path": "/conta-corrente/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/conta-corrente" }
        ]
      },
      "tr_swagger": {
        "Order": 0,
        "ClusterId": "transferenciaCluster",
        "Match": { "Path": "/transferencias/swagger/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/transferencias" }
        ]
      },

      "cc_api": {
        "Order": 1,
        "ClusterId": "contaCluster",
        "Match": { "Path": "/conta-corrente/{**catch-all}" }
      },
      "tr_api": {
        "Order": 1,
        "ClusterId": "transferenciaCluster",
        "Match": { "Path": "/transferencias/{**catch-all}" }
      },
      "tarifas_api": {
        "Order": 1,
        "ClusterId": "tarifasCluster",
        "Match": { "Path": "/tarifas/{**catch-all}" }
      }
    },
    "Clusters": {
      "contaCluster": {
        "Destinations": {
          "d1": { "Address": "http://api-contacorrente:8080/" }
        }
      },
      "transferenciaCluster": {
        "Destinations": {
          "d1": { "Address": "http://api-transferencia:8080/" }
        }
      },
      "tarifasCluster": {
        "Destinations": {
          "d1": { "Address": "http://api-tarifas:8080/" }
        }
      }
    }
  }
}
